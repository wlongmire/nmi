<table class="table">
	<tr>
		<td>Username</td>
		<td>Email</td>
		<td>Actions</td>
	</tr>

	<% @users.each do |u| %>
	<tr>
		<td> <%= u.username %> </td>
		<td> <%= u.email %> </td>
		<td>
			
			<div class="btn-group" role="group" aria-label="...">
				<%= link_to "Show Links", {action: :index, controller: "link", user_name: u.username, type: :posted}, {class: 'btn btn-default', type: "button"} %>
				<%= link_to "Delete", {action: "destroy", user_name: u.username}, {class: 'btn btn-danger', type: "button", method: :delete} %>

			</div>
		</td>
	</tr>
	<% end %>
	
</table>