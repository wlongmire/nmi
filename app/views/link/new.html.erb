<div id="generate_container">
		
	<h2>Add New Article</h2>

	<%= form_for(:link, :url=> generate_path, :html => {:id => "new_form"}) do |f| %>
	
	<div class="input-group">
      <%= f.text_field(:url, class:"new_url", autofocus: true, id:"new_url", placeholder:"Enter the Url of the article you want to add" ) %>
    <span class="input-group-btn">
			<%= f.submit "Upload", class:"btn btn-primary upload_button" %>
		</div>	
  </div>

	<% end %>

</div>