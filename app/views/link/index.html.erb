<div class="row">
	<% if (@links.length > 0) %>
	

		<div class="col-md-6">
			<% @links.each_with_index do |l, idx| %>
				<%= render :partial => 'article', :locals => {:link => l} if idx%2 == 0%>
			<% end %>
		</div>

		<div class="col-md-6">
			<% @links.each_with_index do |l, idx| %>
				<%= render :partial => 'article', :locals => {:link => l} if idx%2 == 1%>
			<% end %>
		</div>

	<% else %>
		
		<h3 style="text-align: center">No articles are avalible for this search criteria.</h3>

	<% end %>
	
</div>